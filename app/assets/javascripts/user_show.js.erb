// map
function coordinates() {
  return { lat: $('#coordinates').data('lat'),
           lng: $('#coordinates').data('lng') };
}

function initMap() {
  var map = new google.maps.Map(document.getElementById('map'), {
    center: coordinates(),
    zoom: 14
  });

